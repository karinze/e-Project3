 @model IEnumerable<AptitudeWebApp.Models.ApplicantExam>
 @using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>Result</title>
    <link rel="stylesheet" href="~/css/result.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</head>
<body>
    <div class="container wrapper">
        <h1>Exam Results</h1>

        <table>
            <thead>
                <tr>
                    <th>Exam Type</th>
                    <th>Score</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var applicantExam in ViewBag.ApplicantExams)
                {
                    <tr>
                        <td class="exam">Exam Type @(applicantExam.CurrentExamTypeId)</td>
                        <td class="enter">@applicantExam.ApplicantScore</td>
                    </tr>
                }
                <tr>
                    <td class="total">Total Score</td>
                    <td class="total1">@ViewBag.TotalScore</td>
                </tr>
            </tbody>
        </table>

        <div>
            <a class="result">RESULT</a>
        </div>
        <div>
            <a class="result1">TOTAL SCORE</a>
        </div>
        <div>
            <a href="#" class="logout">logout</a>
        </div>
        <div>
            <a href="#" class="exit">EXIT</a>
        </div>

        <div>
            <a class="total">Total</a>
            <a class="total1">10/15</a>
        </div>

        <div>
            <a class="exam">Exam</a>
            <a class="enter">1/5</a>
        </div>
        <div>
            <a class="exam1">Exam</a>
            <a class="enter1">5/5</a>
        </div>
        <div>
            <a class="exam2">Exam</a>
            <a class="enter2">4/5</a>
        </div>





        <form action="#">
        </form>
    </div>
</body>
</html>