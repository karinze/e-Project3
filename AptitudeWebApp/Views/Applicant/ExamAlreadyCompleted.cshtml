 @using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>Result</title>
    <link rel="stylesheet" href="~/css/result.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</head>
<body>
    <div class="container wrapper">
        <h1 class="my-4">This exam has already been completed</h1>
        <div class="mt-4">
            <p>Redirecting to Dashboard in <span id="countdown">15</span> seconds...</p>
        </div>

        <div class="mt-4">
            <a asp-action="Logout" asp-controller="Account" class="btn btn-primary">Logout</a>
        </div>
    </div>
    <script>
        // Countdown timer for automatic redirection
        var countdown = 15;
        var countdownElement = document.getElementById("countdown");

        function updateCountdown() {
            countdownElement.textContent = countdown;
            if (countdown === 0) {
                window.location.href = "Applicant/ExamDashboard";
            } else {
                countdown--;
                setTimeout(updateCountdown, 1000);
            }
        }

        updateCountdown();
    </script>
</body>
</html>